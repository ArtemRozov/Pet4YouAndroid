<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_gray"
    tools:context=".ProfileActivity">

   <LinearLayout
       android:id="@+id/header_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:orientation="horizontal"
       android:background="@color/main_blue_color">

       <ImageView
           android:id="@+id/backButton"
           android:layout_width="30pt"
           android:layout_height="30pt"
           android:src="@drawable/back"/>

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="Профіль"
           android:textSize="26sp"
           android:textAlignment="center"
           android:textStyle="bold"
           android:layout_gravity="center"/>

       <ImageView
           android:id="@+id/overviewButton"
           android:layout_width="30pt"
           android:layout_height="30pt"
           android:src="@drawable/overview"/>
   </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:src="@drawable/profile"
                android:layout_gravity="center"
                android:contentDescription="avatar image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5pt"
                android:text="Ім'я: Іван"
                android:textSize="22sp"
                android:layout_marginTop="10pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5pt"
                android:text="Прізвище: Іванчук"
                android:textSize="22sp"
                android:layout_marginTop="3pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5pt"
                android:text="Пошта: ivan2001@gmail.com"
                android:textSize="22sp"
                android:layout_marginTop="3pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5pt"
                android:text="Телефон: +38 068 907 85 97"
                android:textSize="22sp"
                android:layout_marginTop="3pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5pt"
                android:text="Дата народження: 18.04.2001"
                android:textSize="22sp"
                android:layout_marginTop="3pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5pt"
                android:text="Біографія: біографія Івана біографія Івана біографія Івана біографія Івана біографія Івана біографія Івана біографія Івана біографія Івана біографія Івана біографія Івана біографія Івана біографія Івана біографія Івана біографія Івана біографія Івана  "
                android:textSize="22sp"
                android:layout_marginTop="3pt"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="10pt"
                android:backgroundTint="@color/second_blue_color"
                android:text="Змінити профіль"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="3pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/main_blue_color"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/mainButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main_blue_color"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3pt">

            <ImageView
                android:id="@+id/houseImage"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_gravity="center"
                android:src="@drawable/main_house"
                android:contentDescription="main house"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Головна"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/likedButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main_blue_color"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3pt">

            <ImageView
                android:id="@+id/likedImage"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_gravity="center"
                android:src="@drawable/heart"
                android:contentDescription="main house"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Обране"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addAdvertisementButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main_blue_color"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3pt">

            <ImageView
                android:id="@+id/advertisementImage"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:src="@drawable/add"
                android:layout_gravity="center"
                android:contentDescription="add advertisement"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Виставити"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main_blue_color"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3pt">

            <ImageView
                android:id="@+id/chatImage"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:src="@drawable/chat"
                android:layout_gravity="center"
                android:contentDescription="chat"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Чат"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main_blue_color"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3pt">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:src="@drawable/profile"
                android:layout_gravity="center"
                android:contentDescription="profile"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Профіль"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>