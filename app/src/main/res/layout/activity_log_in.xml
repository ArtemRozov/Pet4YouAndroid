<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context=".LogInActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:paddingVertical="5pt"
        android:background="@color/main_blue_color"
        android:contentDescription="@string/content_descr_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_marginHorizontal="5pt"
        android:layout_marginVertical="20pt"
        android:text="Увійдіть на Pet4You для перегляду свого профілю" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/main_blue_color">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_marginVertical="5pt"
            android:text="Вхід" />

        <EditText
            android:id="@+id/editTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10pt"
            android:padding="3pt"
            android:ems="10"
            android:background="@color/white"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:hint="example@gmail.com"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10pt"
            android:layout_marginVertical="5pt"
            android:padding="3pt"
            android:ems="10"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:hint="Пароль"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10pt"
            android:backgroundTint="@color/second_blue_color"
            android:textSize="22sp"
            android:text="Увійти" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/link_color"
            android:layout_marginTop="5pt"
            android:text="Забули пароль?" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20pt"
        android:textAlignment="center"
        android:textColor="@color/link_color"
        android:textSize="22sp"
        android:text="Зареєструватися"
        android:layout_gravity="bottom"/>

</LinearLayout>